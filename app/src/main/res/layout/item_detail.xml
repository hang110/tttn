<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/br1">
                <TextView
                    android:id="@+id/date_work"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:text="hangoottoifg"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/br1">
                <TextView
                    android:id="@+id/time_CI"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="0000000000"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_input_24"
                    />
                <TextView
                    android:id="@+id/time_CO"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="00000000004444"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_output_24"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>